{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true, // <- new (optional but useful)
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jest"], // <- tell TS to load these type packages
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
